{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch index.ts",
    "test": "deno test --allow-net --allow-env",
    "format": "deno fmt supabase/functions/"
  },
  "imports": {
    "http/": "https://deno.land/std@0.168.0/http/",
    "http/server": "https://deno.land/std@0.168.0/http/server.ts",
    "supabase": "https://esm.sh/@supabase/supabase-js@2.38.4",
    "cors": "./supabase/functions/_shared/cors.ts",
    "types": "./supabase/functions/_shared/types.ts",
    "shared/": "./supabase/functions/_shared/"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "lint": {
    "files": {
      "include": ["supabase/functions/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  },
  "fmt": {
    "files": {
      "include": ["supabase/functions/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}