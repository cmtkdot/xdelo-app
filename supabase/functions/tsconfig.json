{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true, // Enabling strict mode as recommended
    /* Disabling individual strict checks to maintain compatibility */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    /* Other compiler options */
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],
    "outDir": "lib",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true, // Added to ensure consistent file casing across OSes
    "resolveJsonModule": true, // Added for .json imports
    "isolatedModules": true // Added for better Deno compatibility
  },
  "include": [
    "**/*.ts"
  ]
}
